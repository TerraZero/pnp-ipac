include _updateFrame

.page__content__character(v-if="data.select == 'character'")
  .character
    .character__image_wrapper
      img.character__image(v-bind:src="data.profession.image")
    .character__descriptions
      .character__description(v-for="line in data.profession.description", v-bind:class="{italic: line.endsWith('-'), bold: line.endsWith('.') || line.endsWith('!')}")
        | {{ line }}
  .table.table--character
    .table__row
      .table__col.table__col__name
        | Name
      .table__col.table__col__value
        | {{ data.user.name }}
    .table__row
      .table__col.table__col__name
        | Alter
      .table__col.table__col__value
        | {{ data.user.age }}
    .table__row
      .table__col.table__col__name
        | Geschlecht
      .table__col.table__col__value
        | {{ gender(data.user.gender) }}
    .table__row
      .table__col.table__col__name
        | Clan
      .table__col.table__col__value
        | {{ data.profession.name }}
    .table__row
      .table__col.table__col__name
        | Initiative
      .table__col.table__col__value
        | {{ data.user.ini }}
    .table__row
      .table__col.table__col__name
        | Talent
      .table__col.table__col__value
        | {{ data.user.points }}
    .table__row(v-for="health in data.healths", v-on:click.prevent="onClickHealth(health)")
      .table__col.table__col__feature
        | {{ health.name }}
      .table__col.table__col__value
        | {{ health.value }} / {{ health.total }}
      +updateHealthFrame('health')
  include _features
